<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <com.m.simpleview.view.IconTextView
        android:id="@+id/icontext"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="#f00"
        android:text="文字"
        android:textSize="20sp"
        android:textColor="@drawable/ico_btn_text_color"
        android:gravity="center"
        app:drawableOne="@drawable/icon_btn_bg"
        app:drawableOneWidth="50dp"
        app:drawableOneHeight="50dp"
        app:drawableOneGravity="center_vertical"
        app:drawableOneLeft="10dp"
        app:drawableTwo="@drawable/icon_btn_bg02"
        app:drawableTwoWidth="50dp"
        app:drawableTwoHeight="50dp"
        app:drawableTwoGravity="center_vertical|right"
        app:drawableTwoRight="10dp"
        app:drawableTwoBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>